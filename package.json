{
	"name": "@pax2pay/model-cde",
	"version": "0.0.9",
	"description": "Model for the Pax2Pay Card Data API.",
	"author": "Pax2Pay Ltd.",
	"license": "MIT",
	"repository": "https://github.com/pax2pay/model-cde",
	"bugs": {
		"url": "https://github.com/pax2pay/model-cde/issues"
	},
	"homepage": "https://pax2pay.com",
	"private": false,
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"git": {
		"tagName": "v${version}"
	},
	"github": {
		"release": true
	},
	"jest": {
		"globals": {
			"ts-jest": {
				"tsconfig": "tsconfig.test.json"
			}
		},
		"transform": {
			"^.+\\.(j|t)sx?$": "ts-jest"
		},
		"transformIgnorePatterns": [
			"<rootDir>/node_modules/(?!(cryptly|authly|isoly|gracely|@pax2pay|cloud-http)/.*)"
		],
		"testEnvironment": "node",
		"testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
		"testPathIgnorePatterns": [
			"node_modules/",
			"dist/"
		],
		"collectCoverageFrom": [
			"**/*.{ts,tsx,js,jsx}",
			"!**/node_modules/**",
			"!**/dist/**"
		],
		"preset": "ts-jest",
		"testMatch": null
	},
	"scripts": {
		"dev": "watch 'npm run build' .",
		"lint": "eslint '**/*.{ts,tsx}'",
		"fix": "eslint '**/*.{ts,tsx}' --fix",
		"build": "tsc -p .",
		"test": "jest --maxWorkers=2",
		"test:watch": "watch jest",
		"prepare": "npm run build",
		"clean": "rimraf dist node_modules coverage"
	},
	"devDependencies": {
		"@types/jest": "^27.0.2",
		"@typescript-eslint/eslint-plugin": "5.2.0",
		"@typescript-eslint/parser": "5.2.0",
		"eslint": "8.1.0",
		"eslint-plugin-prettierx": "github:nilssonemma/eslint-plugin-prettierx#master",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"jest": "^27.3.1",
		"prettierx": "github:simonmika/prettierx#newline-before-clause",
		"rimraf": "^3.0.2",
		"ts-jest": "^27.0.7",
		"typescript": "^4.4.4",
		"watch": "^0.13.0"
	},
	"dependencies": {
		"cloud-http": "^0.0.35"
	}
}
